<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarHome"
        android:background="@drawable/appbarbg"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/loginimg"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/imgLogin"
            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/addbtn"
            android:backgroundTint="@color/black"
            android:background="@color/transparansi"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/addBtnHome"
            android:contentDescription="@string/add_button"/>

        <com.lctproduction.monagement.widget.CustomImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/imgLogin"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/primaryColor"
            android:id="@+id/intialCircleView"/>

        <TextView
            android:id="@+id/txttotaluang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgLogin"
            android:textColor="@color/white"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"

            android:layout_toEndOf="@+id/intialCircleView"
            android:text="Total Uang" />
        <TextView
            android:id="@+id/txtuang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txttotaluang"
            android:text="Rp. 200.000,00"
            android:fontFamily="@font/poppins"
            android:textSize="20sp"
            android:layout_toEndOf="@id/intialCircleView"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"/>


        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollviewHome"
        android:layout_below="@id/appbarHome">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerHome">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/card1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/v1"
            android:background="@color/primaryColorBlue"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v1"
                android:text="Dana Bulan Ini"
                android:fontFamily="@font/poppins"
                android:id="@+id/labelTcard1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelTcard1"
                android:layout_marginStart="10dp"
                android:text="Rp. 2.000.000 /"
                android:textColor="@color/primaryColorBlue"
                android:fontFamily="@font/poppins"
                android:id="@+id/sisaMoney1"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sisaMoney1"
                android:layout_below="@id/labelTcard1"
                android:text="Rp.2.000.000"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins"
                android:id="@+id/totalMoney1"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <ProgressBar
                android:progressDrawable="@drawable/bg_progres"
                android:layout_below="@id/sisaMoney1"
                android:layout_width="350dp"
                android:layout_height="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_marginStart="10dp"
                android:progress="30"
                android:id="@+id/progresMoney1"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/presentasi1"
                android:layout_above="@id/progresMoney1"
                android:text="10%"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namaPekerjaan1"
                android:layout_below="@id/presentasi1"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"

                android:text="Pengangguran"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"
                />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_below="@id/card1"
        android:id="@+id/cardke2"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/v2"
                android:background="@color/primaryColorBlue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v2"
                android:text="Dana Bulan Ini"
                android:fontFamily="@font/poppins"
                android:id="@+id/labelTcard2"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/labelTcard2"
                android:layout_marginStart="10dp"
                android:text="Rp. 2.000.000 /"
                android:textColor="@color/primaryColorBlue"
                android:fontFamily="@font/poppins"
                android:id="@+id/sisaMoney2"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/sisaMoney2"
                android:layout_below="@id/labelTcard2"
                android:text="Rp.2.000.000"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/poppins"
                android:id="@+id/totalMoney2"
                android:textSize="15sp"
                android:textColor="@color/black"/>

            <ProgressBar
                android:id="@+id/progresMoney2"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="342dp"
                android:layout_height="5dp"
                android:layout_below="@id/sisaMoney2"
                android:layout_marginStart="10dp"
                android:progress="20"
                android:progressDrawable="@drawable/bg_progres" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/presentasi2"
                android:layout_above="@id/progresMoney2"
                android:text="10%"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/namaPekerjaan2"
                android:layout_below="@id/presentasi2"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"

                android:text="Pengangguran"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="@color/black"
                />





        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardke2"
        android:layout_marginTop="15dp"
        android:text="Pengeluaran Terbaru"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:id="@+id/labelPengeluaraTerbaru"
        />
    <View
        android:layout_width="370dp"
        android:layout_height="5dp"
        android:id="@+id/v3"
        android:layout_below="@id/labelPengeluaraTerbaru"
        android:background="@drawable/bg_radius1"

        android:layout_centerHorizontal="true"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/v3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/rvPengeluaran"/>

</RelativeLayout>
    </ScrollView>


</RelativeLayout>