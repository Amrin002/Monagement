<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageButton
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:src="@drawable/backbtnback"
        android:id="@+id/backloginbtn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparansi"/>

    <!--    content-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backloginbtn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:id="@+id/txtRegister"
        android:fontFamily="@font/poppins"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/loginimg"
        android:layout_below="@id/txtRegister"
        android:id="@+id/loginImg1"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardContentLogin"
        android:layout_alignParentBottom="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        >
        <RelativeLayout
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Lengkap"
                android:id="@+id/txtNamaLengkap"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNamaLengkap"
                android:id="@+id/edtNamaLengkap"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:hint="Masukan nama"/>
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Handphone"
                android:layout_below="@id/edtNamaLengkap"
                android:id="@+id/txtNomorHandphone"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtNomorHandphone"
                android:id="@+id/edtNomorHandphone"
                android:fontFamily="@font/poppins"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:inputType="number"
                android:hint="Masukan nomor"/>

            <TextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtNomorHandphone"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPassword"

                android:drawableEnd="@drawable/showpass"
                android:fontFamily="@font/poppins"
                android:hint="Masukan password"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:textSize="14sp"
                />
            <TextView
                android:id="@+id/txtConfirmPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edtPassword"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/poppins"
                android:text="Konfirmasi Password"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edtConfirmPass"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtConfirmPass"

                android:drawableEnd="@drawable/showpass"
                android:fontFamily="@font/poppins"
                android:hint="Masukan password"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:textSize="14sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lupa Password?"
                android:id="@+id/txtLupaPassword"
                android:fontFamily="@font/poppins"
                android:textSize="12sp"
                android:textColor="@color/primaryColorBlue"
                android:layout_below="@id/edtConfirmPass"
                android:layout_marginTop="15dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnRegister"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtLupaPassword"
                android:background="@drawable/bg_radius"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/primaryColor"
                android:text="Register"
                android:textAllCaps="false" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnRegister"
                android:layout_centerHorizontal="true"
                android:paddingBottom="50dp">

            </RelativeLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>