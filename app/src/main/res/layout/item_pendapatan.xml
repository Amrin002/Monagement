<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:id="@+id/v2"
            android:background="@drawable/bg_radius00"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:text="Dana Bulan Ini"
            android:fontFamily="@font/poppins"
            android:id="@+id/labelTcard2"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/labelTcard2"
            android:layout_marginStart="10dp"
            android:text="Rp. 2.000.000 /"
            android:textColor="@color/primaryColorBlue"
            android:fontFamily="@font/poppins"
            android:id="@+id/sisaMoney"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sisaMoney"
            android:layout_below="@id/labelTcard2"
            android:text="Rp.2.000.000"
            android:layout_marginStart="5dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/poppins"
            android:id="@+id/totalMoney"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <ProgressBar
            android:id="@+id/progresMoney"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="342dp"
            android:layout_height="5dp"
            android:layout_below="@id/sisaMoney"
            android:layout_marginStart="10dp"
            android:progress="20"
            android:progressDrawable="@drawable/bg_progres" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/presentasiMoney"
            android:layout_above="@id/progresMoney"
            android:text="10%"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/namaPekerjaan2"
            android:layout_below="@id/presentasiMoney"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"

            android:text="Pengangguran"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textColor="@color/black"
            />





    </RelativeLayout>
</RelativeLayout>